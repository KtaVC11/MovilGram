<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Cuando el checkbox no este presionado mostrara el corazon vacio-->
    <item android:drawable="@drawable/heart" android:state_checked="false"></item>

    <!--Cuando el checkbox este presionado mostrara el corazon lleno-->
    <item android:drawable="@drawable/heart_full" android:state_checked="true"></item>

    <!--El estado del checkbox por defecto sera el vacio-->
    <item android:drawable="@drawable/heart"></item>
</selector>